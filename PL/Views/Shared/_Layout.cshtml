<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Camping & Entertainment</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <style>

        /* Navbar Hover Effects */
        .navbar-nav .nav-link {
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #ffcc00; /* Interactive hover effect */
            }

        /* Make Sign Up button stand out */
        .btn-primary {
            background-color: #ffcc00; /* Bright color to make it stand out */
            border-color: #ffcc00;
            color: black;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #333;
                color: white;
            }

        /* Footer Styling */
        footer {
            background-color: rgba(0, 0, 0, 0.8); /* Dark, transparent background */
            color: white;
        }
    </style>
</head>
<body>
<!-- Header with Navbar -->
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Camping & Entertainment</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Camp" asp-action="index">Camps</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Booking" asp-action="Index">Bookings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="User" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary" asp-controller="User" asp-action="Register">Sign Up</a> <a class="btn btn-primary" asp-controller="User" asp-action="Register">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Main Content Section -->
<main role="main" class="container text-center">
    @RenderBody()
</main>

<!-- Footer Section -->
<footer class="bg-dark text-light text-center p-4 mt-5">
    <div class="container">
        <p>&copy; 2024 Camping & Entertainment. All rights reserved.</p>
        <p>
            <a asp-controller="Home" asp-action="PrivacyPolicy" class="text-light">Privacy Policy</a> |
            <a asp-controller="Home" asp-action="TermsOfService" class="text-light">Terms of Service</a> |
            <a asp-controller="Home" asp-action="Contact" class="text-light">Contact</a>
        </p>
    </div>
</footer>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>