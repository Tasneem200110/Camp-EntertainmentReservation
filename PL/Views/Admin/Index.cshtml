@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .dashboard-container {
            margin-top: 30px;
        }

        .card {
            margin-bottom: 20px;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #f8f9fa;
        }

            .sidebar a {
                padding: 15px;
                display: block;
                color: #000;
            }

                .sidebar a:hover {
                    background-color: #ddd;
                    color: #000;
                }

        .chart-container {
            height: 400px;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="position-sticky">
                    <h4 class="mt-3">Admin Panel</h4>
                    <a href="#">Dashboard</a>
                    <a href="#">Manage Camps</a>
                    <a href="#">View Bookings</a>
                    <a href="#">User Management</a>
                    <a href="#">Settings</a>
                </div>
            </nav>

            <!-- Main Dashboard -->
            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
                <div class="dashboard-container">

                    <!-- Key Metrics -->
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card text-white bg-primary">
                                <div class="card-body">
                                    <h5 class="card-title">Total Camps</h5>
                                    <p class="card-text">@Model.CampsCount</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-white bg-success">
                                <div class="card-body">
                                    <h5 class="card-title">Total Bookings</h5>
                                    <p class="card-text">@Model.BookingsCount</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-white bg-info">
                                <div class="card-body">
                                    <h5 class="card-title">Registered Users</h5>
                                    <p class="card-text">@Model.UsersCount</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-white bg-warning">
                                <div class="card-body">
                                    <h5 class="card-title">Upcoming Camps</h5>
                                    <p class="card-text">Camp XYZ, 10 spots left</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Charts Section -->
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header">Bookings Over Time</div>
                                <div class="card-body">
                                    <canvas id="bookingsChart"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">Popular Camps</div>
                                <div class="card-body">
                                    <canvas id="popularCampsChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Activities -->
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">Recent Activities</div>
                                <div class="card-body">
                                    <ul>
                                        <li>John Doe booked Camp XYZ on Oct 21</li>
                                        <li>Jane Doe canceled her booking for Camp ABC on Oct 20</li>
                                        <li>Mike Ross registered on Oct 19</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

    <!-- Chart.js script -->
    <script>
        var ctx = document.getElementById('bookingsChart').getContext('2d');
        var bookingsChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Oct 1', 'Oct 5', 'Oct 10', 'Oct 15', 'Oct 20'],
                datasets: [{
                    label: 'Bookings',
                    data: [10, 25, 15, 30, 45],
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            }
        });

        var ctx2 = document.getElementById('popularCampsChart').getContext('2d');
        var popularCampsChart = new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: ['Camp A', 'Camp B', 'Camp C', 'Camp D'],
                datasets: [{
                    label: 'Bookings',
                    data: [20, 50, 30, 40],
                    backgroundColor: ['rgba(255, 99, 132, 0.2)', 'rgba(54, 162, 235, 0.2)', 'rgba(255, 206, 86, 0.2)', 'rgba(75, 192, 192, 0.2)'],
                    borderColor: ['rgba(255, 99, 132, 1)', 'rgba(54, 162, 235, 1)', 'rgba(255, 206, 86, 1)', 'rgba(75, 192, 192, 1)'],
                    borderWidth: 1
                }]
            }
        });
    </script>

</body>
</html>

