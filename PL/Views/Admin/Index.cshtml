@model PL.ViewModels.AdminDashboardViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .dashboard-container {
            margin-top: 30px;
        }

        .card {
            margin-bottom: 20px;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #f8f9fa;
        }

            .sidebar a {
                padding: 15px;
                display: block;
                color: #000;
            }

                .sidebar a:hover {
                    background-color: #ddd;
                    color: #000;
                }

        .chart-container {
            height: 400px;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="position-sticky">
                    <h4 class="mt-3">Admin Panel</h4>
                    <a href="#">Dashboard</a>
                    <a href="#">Manage Camps</a>
                    <a href="#">View Bookings</a>
                    <a href="#">User Management</a>
                    <a href="#">Settings</a>
                </div>
            </nav>

            <!-- Main Dashboard -->
            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
                <div class="dashboard-container">

                    <!-- Key Metrics -->
                    <div class="row justify-content-center text-center">
                        <div class="col-md-3">
                            <div class="card text-white bg-primary">
                                <div class="card-body">
                                    <h5 class="card-title">Total Camps</h5>
                                    <p class="card-text">@Model.CampsCount</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-white bg-success">
                                <div class="card-body">
                                    <h5 class="card-title">Total Bookings</h5>
                                    <p class="card-text">@Model.BookingsCount Total Booking, @Model.TodayBooking Today</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-white bg-info">
                                <div class="card-body">
                                    <h5 class="card-title">Registered Users</h5>
                                    <p class="card-text">@Model.UsersCount Users, @Model.TodayNewUsers New Today</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Charts Section -->
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header text-center">Bookings Over 4 Weeks</div>
                                <div class="card-body">
                                    <canvas id="bookingsChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header text-center">Revenue of 4 Weeks</div>
                                <div class="card-body">
                                    <canvas id="weeklyRevenue"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-center mt-4">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header text-center">Camps Bookings</div>
                                <div class="card-body">
                                    <canvas id="popularCampsChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </main>

        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

    <!-- Chart.js script -->
    <script>

        var ctx = document.getElementById('bookingsChart').getContext('2d');
        var bookingsChart = new Chart(ctx, {
            type: 'bar', // Set the initial type to 'bar'
            data: {
                labels: @Html.Raw(Json.Serialize(Model.WeekLabels)), // Pass the week labels
                datasets: [
                    {
                        label: 'Bookings (Bar)', // Bar dataset label
                        data: @Html.Raw(Json.Serialize(Model.MonthBookingStatistics)), // Booking counts
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)'
                        ], // You can add more colors based on the number of camps
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)'
                        ],
                        borderWidth: 1,
                        type: 'bar', // Specify the dataset type as bar
                    },
                    {
                        label: 'Bookings (Line)', // Line dataset label
                        data: @Html.Raw(Json.Serialize(Model.MonthBookingStatistics)), // Same data for trend
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 2,
                        fill: false, // Do not fill under the line
                        type: 'line', // Specify the dataset type as line
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true, // Start y-axis at zero
                        title: {
                            display: true,
                            text: 'Number of Bookings' // Title for the y-axis
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Weeks' // Title for the x-axis
                        }
                    }
                }
            }
        });

        var ctx = document.getElementById('weeklyRevenue').getContext('2d');
        var weeklyRevenue = new Chart(ctx, {
            type: 'bar', // Set the initial type to 'bar'
            data: {
                labels: @Html.Raw(Json.Serialize(Model.WeekLabels)), // Pass the week labels
                datasets: [
                    {
                        label: 'Bookings (Bar)', // Bar dataset label
                        data: @Html.Raw(Json.Serialize(Model.WeeklyRevenue)), // Booking counts
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)'
                        ], // You can add more colors based on the number of camps
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)'
                        ],
                        borderWidth: 1,
                        type: 'bar', // Specify the dataset type as bar
                    },
                    {
                        label: 'Bookings (Line)', // Line dataset label
                        data: @Html.Raw(Json.Serialize(Model.WeeklyRevenue)), // Same data for trend
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 2,
                        fill: false, // Do not fill under the line
                        type: 'line', // Specify the dataset type as line
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true, // Start y-axis at zero
                        title: {
                            display: true,
                            text: 'Weeks Revenue' // Title for the y-axis
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Weeks' // Title for the x-axis
                        }
                    }
                }
            }
        });




        var ctx2 = document.getElementById('popularCampsChart').getContext('2d');
        var popularCampsChart = new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.CampNames)), // Dynamically pass camp names from C# to JavaScript
                datasets: [{
                    label: 'Bookings',
                    data: @Html.Raw(Json.Serialize(Model.CampBookings)), // Dynamically pass booking counts
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)'
                    ], // You can add more colors based on the number of camps
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });



    </script>

    <canvas id="bookingsChart"></canvas>

    <script>
        
    </script>

</body>
</html>

