@model PL.ViewModels.ResetPasswordVM

@{
    Layout = null; // No layout for this view
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reset Password</title>
    <style>
        body {
            background-color: #f0f8ff; /* Baby blue background */
            font-family: Arial, sans-serif;
            margin: 0; /* Remove default margin */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Full height for centering */
        }

        .ResetPassword-container {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%); /* Center the form */
            width: 95%; /* Responsive width */
            max-width: 600px; /* Reduced max width for smaller form */
            z-index: 2; /* Set above video */
        }

        form {
            background-color: rgba(191, 191, 191, 0.5);
            padding: 30px; /* Reduced padding */
            border-radius: 50px; /* Adjusted border radius */
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
            border: 1px solid #804132;
            font-size: 16px; /* Adjusted font size */
            color: #232323; /* Changed text color */
            margin: 0;
        }

            form h2 {
                text-align: center !important;
                margin-bottom: 20px !important; /* Reduced bottom margin */
                color: #863928 !important;
                text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
            }

        .form-group {
            margin-bottom: 15px; /* Reduced margin */
        }

        form input {
            width: 100%;
            padding: 12px; /* Adjusted padding */
            margin-bottom: 10px; /* Reduced margin */
            border: 1px solid #b4b2b2;
            border-radius: 50px; /* Adjusted border radius */
            font-size: 14px; /* Adjusted font size */
            color: #232323;
        }

        .req {
            color: #000000 !important;
            font-size: 12px !important; /* Adjusted font size */
            font-weight: bold !important;
        }

        button {
            width: 100%;
            padding: 12px;
            margin-top: 10px;
            background-color: #863928;
            color: #fff;
            border: none;
            border-radius: 50px; /* Adjusted border radius */
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background-color: #a56d3c;
            }

        .more {
            margin-top: 10px;
            text-align: center;
        }

        .regest {
            color: white;
            text-decoration: solid;
        }
    </style>
</head>
<body>
    <div class="ResetPassword-container">
        <form asp-action="ResetPassword" asp-controller="Account" method="post">
            <h2>Reset Password</h2>

            <div class="form-group">
                <input asp-for="Password" placeholder="Enter New Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="req text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" placeholder="Confirm New Password" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="req text-danger"></span>
            </div>
            <button type="submit">Reset</button>
        </form>
    </div>
</body>
</html>
