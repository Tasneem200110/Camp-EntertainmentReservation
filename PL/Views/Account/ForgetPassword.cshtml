@model PL.ViewModels.ForgetPasswordVM

@{
    Layout = null; // No layout for this view
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Forget Password</title>
    <style>
        body {
            background-color: #f0f8ff; /* Baby blue background */
            font-family: Arial, sans-serif;
            margin: 0; /* Remove default margin */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Full height for centering */
        }

        .ForgetPassword-container {
            position: relative; /* Changed to relative for better centering */
            width: 95%; /* Responsive width */
            max-width: 600px; /* Reduced max width for smaller form */
            z-index: 2; /* Set above video */
        }

        form {
            background-color: rgba(191, 191, 191, 0.8); /* Slightly more opaque for better visibility */
            padding: 30px; /* Padding */
            border-radius: 25px; /* More subtle border radius */
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5); /* Reduced shadow for a softer look */
            border: 1px solid #804132; /* Border color */
            font-size: 16px; /* Adjusted font size */
            color: #232323; /* Text color */
            margin: 0 auto; /* Centering the form */
        }

            form h2 {
                text-align: center; /* Center the header */
                margin-bottom: 20px; /* Space below the header */
                color: #863928; /* Header color */
                text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000; /* Text shadow */
            }

        .form-group {
            margin-bottom: 15px; /* Reduced margin */
        }

        form input {
            width: 100%; /* Full width for input */
            padding: 12px; /* Adjusted padding */
            margin-bottom: 10px; /* Space below input */
            border: 1px solid #b4b2b2; /* Input border color */
            border-radius: 50px; /* Rounded corners */
            font-size: 14px; /* Font size for input */
            color: #232323; /* Text color */
            transition: border-color 0.3s; /* Smooth transition for border */
        }

            form input:focus {
                border-color: #804132; /* Change border color on focus */
                outline: none; /* Remove outline */
            }

        .req {
            color: #000000 !important; /* Requirement text color */
            font-size: 12px !important; /* Adjusted font size */
            font-weight: bold !important; /* Bold requirement text */
        }

        button {
            width: 100%; /* Full width for button */
            padding: 12px; /* Padding */
            margin-top: 10px; /* Space above button */
            background-color: #863928; /* Button color */
            color: #fff; /* Button text color */
            border: none; /* No border */
            border-radius: 50px; /* Rounded corners */
            cursor: pointer; /* Pointer cursor on hover */
            font-size: 16px; /* Button font size */
            transition: background-color 0.3s; /* Smooth transition for background */
        }

            button:hover {
                background-color: #a56d3c; /* Hover effect */
            }

        .more {
            margin-top: 10px; /* Space above 'more' section */
            text-align: center; /* Center text */
        }

        .regest {
            color: white; /* Registration link color */
            text-decoration: solid; /* Decoration style */
        }
    </style>
</head>
<body>
    <div class="ForgetPassword-container">
        <form asp-action="ForgetPassword" asp-controller="Account" method="post">
            <h2>Forget Password</h2>
            <div class="form-group">
                <input asp-for="Email" placeholder="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="req text-danger"></span>
            </div>
            <button type="submit">Send</button>
        </form>
    </div>
</body>
</html>
