@model PL.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<style>
    .video-container video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1; /* Set video behind the form */
    }

    .register-container {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); /* Center the form */
        width: 95%; /* Responsive width */
        max-width: 600px; /* Reduced max width for smaller form */
        z-index: 2; /* Set above video */
    }

    form {
        background-color: rgba(191, 191, 191, 0.5);
        padding: 30px; /* Reduced padding */
        border-radius: 50px; /* Adjusted border radius */
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
        border: 1px solid #804132;
        font-size: 16px; /* Adjusted font size */
        color: #232323; /* Changed text color */
        margin: 0;
    }

        form h2 {
            text-align: center !important;
            margin-bottom: 20px !important; /* Reduced bottom margin */
            color: #863928 !important;
            text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000;
        }

    .form-group {
        margin-bottom: 15px; /* Reduced margin */
    }

    form input,
    form select {
        width: 100%;
        padding: 12px; /* Adjusted padding */
        margin-bottom: 10px; /* Reduced margin */
        border: 1px solid #b4b2b2;
        border-radius: 50px; /* Adjusted border radius */
        font-size: 14px; /* Adjusted font size */
        color: #232323;
    }

    .req {
        color: #000000 !important;
        font-size: 12px !important; /* Adjusted font size */
        font-weight: bold !important;
    }

    button {
        width: 100%;
        padding: 12px;
        margin-top: 10px;
        background-color: #863928;
        color: #fff;
        border: none;
        border-radius: 50px; /* Adjusted border radius */
        cursor: pointer;
        font-size: 16px;
    }

        button:hover {
            background-color: #a56d3c;
        }

    .more {
        margin-top: 10px;
        text-align: center;
    }

    .regest {
        color: white;
        text-decoration: solid;
    }
</style>

<div class="video-container">
    <video autoplay muted loop>
        <source src="~/videos/EGYPT 2021 - Cinematic Video 4K.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</div>

<div class="register-container">
    <form asp-action="Register" asp-controller="Account" method="post">
        <h2>Register</h2>

        <!-- Display global error message -->
        @if (!string.IsNullOrEmpty(ViewData["RegisterError"]?.ToString()))
        {
            <div class="alert alert-danger">
                @ViewData["RegisterError"]
            </div>
        }

        <div class="form-group">
            <input asp-for="UserName" placeholder="Username" class="form-control" />
            <span asp-validation-for="UserName" class="req text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Email" placeholder="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="req text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" placeholder="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="req text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="ConfirmPassword" placeholder="Confirm Password" type="password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="req text-danger"></span>
        </div>

        <button type="submit">Register</button>

        <div class="more">
            <p>
                <a asp-area="" asp-controller="Account" asp-action="Login" class="regest">I already have an account</a>
            </p>
        </div>
    </form>
</div>
