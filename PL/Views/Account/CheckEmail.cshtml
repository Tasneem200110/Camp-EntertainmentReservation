@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Check Email</title>
    <style>
        body {
            background-color: #f0f8ff; /* Baby blue background */
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Full height */
            margin: 0; /* Remove default margin */
        }

        .check-email-container {
            background-color: rgba(191, 191, 191, 0.7); /* Semi-transparent background */
            padding: 30px; /* Padding for the container */
            border-radius: 15px; /* Rounded corners */
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5); /* Box shadow */
            text-align: center; /* Center text */
        }

        h2 {
            color: #863928; /* Header color */
            margin-bottom: 20px; /* Space below the header */
            text-shadow: -1px -1px 0 #000000, 1px -1px 0 #000000, -1px 1px 0 #000000, 1px 1px 0 #000000; /* Text shadow */
        }

        .alert-warning {
            color: #232323; /* Dark text color */
            font-size: 16px; /* Font size */
            font-weight: bold; /* Bold text */
        }
    </style>
</head>
<body>
    <div class="check-email-container">
        <h2>Check Your Email</h2>
        <div class="alert-warning">
            Please check your gmail for further instructions.
        </div>
    </div>
</body>
</html>
