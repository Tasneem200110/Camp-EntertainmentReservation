@model BookingViewModel
@{
    ViewData["Title"] = "Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5">
    <h2>Create New Booking</h2>

    <form asp-action="Book" method="post">
        @Html.AntiForgeryToken()
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="UserID" class="form-label">User ID</label>
            <select asp-for="UserID" class="form-control" required>
                <option value="">-- Select User --</option>
                @if (ViewBag.Users != null)
                {
                    foreach (var user in ViewBag.Users as IEnumerable<DAL.Entities.User>)
                    {
                        <option value="@user.UserID">@user.UserID</option>
                    }
                }
            </select>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CampID" class="form-label">Camp ID</label>
            <select asp-for="CampID" class="form-control" required>
                <option value="">-- Select Camp --</option>
                @if (ViewBag.Camps != null)
                {
                    foreach (var camp in ViewBag.Camps as IEnumerable<DAL.Entities.Camp>)
                    {
                        <option value="@camp.CampID">@camp.CampID</option>
                    }
                }
            </select>
            <span asp-validation-for="CampID" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" class="form-control" type="date" required />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" class="form-control" type="date" required />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary">Create Booking</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>





<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

