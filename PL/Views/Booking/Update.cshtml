@model Booking
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5">
    <h2>Edit Booking</h2>
    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="BookingId" />

        <div class="form-group mb-3">
            <label asp-for="UserID" class="form-label">User ID</label>
            <input asp-for="UserID" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label asp-for="CampID" class="form-label">Camp ID</label>
            <input asp-for="CampID" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" class="form-control" type="date" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" class="form-control" type="date" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="TotalAmount" class="form-label">Total Amount</label>
            <input asp-for="TotalAmount" class="form-control" type="number" step="0.01" readonly/>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
